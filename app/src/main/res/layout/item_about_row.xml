<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="cz.covid19cz.app.R"/>
        <import type="androidx.recyclerview.widget.RecyclerView"/>
        <import type="cz.covid19cz.app.ui.about.AboutRecyclerLayoutStrategy"/>
        <variable
            name="item"
            type="cz.covid19cz.app.ui.about.entity.AboutRoleItem" />
        <variable
            name="vm"
            type="cz.covid19cz.app.ui.about.AboutVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{item.title}"
        tools:text="Role"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:padding="8dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:viewModel="@{vm}"
        app:items="@{item.items}"
        app:layoutStrategy="@{AboutRecyclerLayoutStrategy.INSTANCE}"
        app:orientation="@{RecyclerView.HORIZONTAL}"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:clipToPadding="false"
        />

    </LinearLayout>

</layout>